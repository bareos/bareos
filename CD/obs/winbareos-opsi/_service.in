<?xml version="1.0"?>
<services>
  <service name="obs_scm">
    <param name="revision">@REVISION@</param>
    <param name="@VERSION_OR_VERSIONPREFIX@">@VERSION_NUMBER@</param>
    <param name="url">@GIT_URL@</param>
    <param name="submodules">disable</param>
    <param name="filename">bareos</param>
    <param name="scm">git</param>
    <param name="subdir">core</param>
    <param name="extract">platforms/opsi/winbareos-opsi.changes</param>
    <param name="extract">platforms/opsi/winbareos-opsi.spec</param>
  </service>
  <service mode="buildtime" name="tar" />
  <service mode="buildtime" name="recompress">
    <param name="file">*.tar</param>
    <param name="compression">gz</param>
  </service>
  <service name="set_version"/>
</services>
