    "${BAREOS_BEXTRACT_BINARY}" -c "${BAREOS_CONFIG_DIR}" "$@" </dev/null | tee "${tmp}/bextract.out"
  else
    "${BAREOS_BEXTRACT_BINARY}" -c "${BAREOS_CONFIG_DIR}" "$@" </dev/null 2>&1 >"${tmp}/bextract.out"
