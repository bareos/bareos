    "${BAREOS_BLS_BINARY}" -c "${BAREOS_CONFIG_DIR}" "$@" </dev/null | tee "${tmp}/bls.out"
  else
    "${BAREOS_BLS_BINARY}" -c "${BAREOS_CONFIG_DIR}" "$@" </dev/null 2>&1 >"${tmp}/bls.out"
  fi
}

