#
# Check whether generated volumes can be bscanned
#

set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions

start_test

mkdir -p storage

${BAREOS_GENERATE_VOLUMES_BINARY} --archive_dir storage

volumes=$(find storage -type f -printf '|%P')

db_data=("-n" "${db_name}" "-u" "${db_user}")

if [ -n "${db_password}" ]; then
  db_data+=("-p" "${db_password}")
fi

echo "${BAREOS_BSCAN_BINARY}" -c "${conf}" "${db_data[@]}" -s -V "${volumes:1}" FileStorage
${BAREOS_BSCAN_BINARY} -c "${conf}" "${db_data[@]}" -s -V "${volumes:1}" FileStorage

end_test
