set -e
set -o pipefail
set -u
#
# Run two simple full backups
#
TestName="$(basename "$(pwd)")"
export TestName

JobName=backup-bareos-fd

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions
#shellcheck source=functions
. functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out ${runner_tmp}/misc.out
setdebug level=100 storage=File trace=1
label volume=TestVolume001 storage=File pool=Full
messages
@$out ${runner_tmp}/create-full-1.out
run job=$JobName level=Full yes
wait
messages
@$out ${runner_tmp}/create-full-2.out
run job=$JobName level=Full yes
wait
messages
@$out ${runner_tmp}/misc.out
status director
status client
status storage=File
@$out ${runner_tmp}/jobs.out
list jobs
quit
END_OF_DATA

run_bconsole
check_for_zombie_jobs storage=File

for i in 1 2; do
  expect_grep "Start Backup JobId" \
    "${runner_tmp}/create-full-${i}.out" \
    "Did not create a backup job."

  expect_grep "Backup OK" \
    "${runner_tmp}/create-full-${i}.out" \
    "Backup was not created correctly."
done

end_test
