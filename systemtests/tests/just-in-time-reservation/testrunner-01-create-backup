set -e
set -o pipefail
set -u
#
# Run a simple backup
#

TestName="$(basename "$(pwd)")"
export TestName

JobName=backup-bareos-fd

#shellcheck source=../../environment.in
. ./environment
runner_name="$(basename "$0")"
runner_tmp="${tmp}/${runner_name}"
mkdir -p "${runner_tmp}"

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out ${runner_tmp}/create-backup.out
setdebug level=100 storage=File trace=1
label volume=BackupVol storage=File pool=Full
run job=$JobName yes
status director
status client
status storage=File
wait
messages
update volstatus=Used volume=BackupVol
@$out ${runner_tmp}/jobs.out
list jobs
quit
END_OF_DATA

run_bconsole
check_for_zombie_jobs storage=File

expect_grep "No prior Full backup Job record found." \
  "${runner_tmp}/create-backup.out" \
  "Bad initial state. No backup should exist yet."

expect_grep "Start Backup JobId 1" \
  "${runner_tmp}/create-backup.out" \
  "Did not create backup job with id 1."

expect_grep "Backup OK" \
  "${runner_tmp}/create-backup.out" \
  "Backup was not created correctly."

expect_grep "Using just in time reservation for job" \
  "${runner_tmp}/create-backup.out" \
  "Backup job did not use just in time reservation."

end_test
