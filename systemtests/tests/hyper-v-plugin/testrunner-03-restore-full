#
# Do a full restore from an archive job.
#

set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out ${runner_tmp}/setup.out
status director
status client
status storage=File
wait
messages
@$out ${runner_tmp}/jobs.out
list jobs
@$out ${runner_tmp}/restore-full.out
restore client=bareos-fd fileset=SelfTest select all done yes
wait
messages
END_OF_DATA

run_bconsole
check_for_zombie_jobs storage=File
check_log "${runner_tmp}/restore-full.out"

expect_grep "Start Restore Job" \
  "${runner_tmp}/restore-full.out" \
  "Required restore job was not started."

output=$(ps_exec "\$ErrorActionPreference= 'silentlycontinue'; \$vm = \$(Get-VM -Name ${vm_name}); Write-Host -NoNewLine \$vm.Length")

if ! [[ "${output}" -eq "2" ]]; then
  echo "There are ${output} VMs named '${vm_name}'. There should be 2."
  exit 1
fi

end_test
