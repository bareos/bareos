runner_name="$(basename "$0")"
runner_tmp="${tmp}/${runner_name}"

export runner_name
export runner_tmp

mkdir -p "${runner_tmp}"

ps_exec()
{
  file=$1

  command_parts=(
    "\$content = Get-Content ${file}"
    "\$replaced = \$content -replace '\^','$'"
    "\$surrounded = \"& { \$replaced }\""
    "\$bytes = [System.Text.Encoding]::Unicode.GetBytes(\$replaced)"
    "\$encoded = [Convert]::ToBase64String(\$bytes)"
    # "Write-Host \$encoded"
    "powershell -encodedCommand \$encoded"
  )

  command=$(
    IFS=';'
    echo "& { ${command_parts[*]} }"
  )

  # echo "${command}"
  powershell -NoLogo -NonInteractive -Command "${command}"
}
