# Run a hyper-v full backup
#

set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

JobName=backup-bareos-fd

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${rscripts}"/functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out ${runner_tmp}/setup.out
run job=$JobName level=Incremental yes
status director
status client
status storage=File
wait
@$out ${runner_tmp}/create-backup.out
messages
@$out ${runner_tmp}/jobs.out
list jobs
quit
END_OF_DATA

run_bconsole "$tmp/bconcmds"
check_for_zombie_jobs storage=File

check_log "${runner_tmp}/create-backup.out"

expect_grep "Backup Level:[[:space:]]*Incremental" \
  "${runner_tmp}/create-backup.out" \
  "Did not create an incremental backup"

end_test
