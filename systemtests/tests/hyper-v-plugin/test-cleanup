set -e
set -o pipefail
set -u

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

if [ -f "${tmp}/${vm_data_file}" ]; then
  #shellcheck source=vm.info.template
  source "${tmp}/${vm_data_file}"

  # delete the created vm
  cat <<EOF >"${tmp}/ps_commands"
Get-VM "${vm_name}" | Remove-VM -Force;
Remove-Item -Path "${vm_disk}";
EOF

  ps_exec "${tmp}/ps_commands"

fi

"${BAREOS_SCRIPTS_DIR}"/cleanup
