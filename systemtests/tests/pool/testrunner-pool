set -e
set -o pipefail
set -u

#
# Check that the NextPool option inside the pool resource
#       is taken into consideration
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions
. functions

mkdir -p ${BackupDirectory}

start_test

cat <<EOF >${tmp}/bconcmds
@$out ${log_home}/full.out
@exec "touch ${BackupDirectory}/1.txt"
run job=pool-resources level=Full yes
wait
messages
@$out ${log_home}/copy.out
run job=Copy-Pool yes
wait
messages
EOF
run_bconsole

expect_grep "Pool:[[:space:]]*\"Full\"" "${log_home}/full.out" "Full Backup chose wrong Pool"
check_all_jobs "${log_home}/full.out" "Full Backup did not complete sucessfully"
expect_grep "Write Pool:[[:space:]]*\"Full-Next\"" "${log_home}/copy.out" "Full backup was copied to the wrong pool"
check_all_jobs "${log_home}/copy.out" "Copy Job did not complete sucessfully"

end_test
