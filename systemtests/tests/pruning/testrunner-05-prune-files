set -e
set -o pipefail
set -u

#
# run multiple jobs and verify that pruning of files works
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${rscripts}"/functions

start_test

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${log_home}/prune.out
prune files pool=Full yes
wait
@$out ${log_home}/restore.out
restore jobid=11
no
messages
quit
END_OF_DATA

run_bconsole

expect_grep "Pruned Files from 1 Jobs" \
  "${log_home}/prune.out" \
  "Expected number of files pruned not found"

expect_grep "Most likely your retention policy pruned the files." \
  "${log_home}/restore.out" \
  "Restore command found files, when they should have been pruned"

end_test
