set -e
set -o pipefail
set -u

#
# make sure we can restore a full backup to some absolute location
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

# remove files
cleanup_remote

restore_path="${NDMP_MOUNTPOINT}/data/${NDMP_TEST_PATH}/bareos-restores-${IP_ADDRESS_TO_ACCESS_NDMP_DATA_AGENT}"


cat <<END_OF_DATA >"${tmp}/bconcmds"
@$out ${log_home}/restore.out
restore jobid=1 client=ndmp-fd fileset=${NDMP_CLIENT}-fileset restorejob=NDMPRestoreDump where=^${restore_path} all done yes
wait
END_OF_DATA

run_bconsole "${tmp}/bconcmds"

check_log "${log_home}/restore.out"

# printf is used to suppress error return due to null byte
# bash: line 1: warning: command substitution: ignored null byte in input
${SSH} "printf \"%s\" \$(tail -c 200 \"${restore_path}/full\") | grep ${IP_ADDRESS_TO_ACCESS_NDMP_DATA_AGENT}"
${SSH} "cat \"${restore_path}/testfile\"" | diff - sbin/bareos_dir-ndmp-native
${SSH} "cat \"${restore_path}/testfile2\"" | diff - sbin/bareos_sd-ndmp-native

#check_for_zombie_jobs storage=ndmpfile client=ndmp-fd

end_test
