check_job_ids()
{
  expected_ids="$1"

  selected_ids="$(bin/bconsole | grep "You have selected the following JobIds\?: " | cut -d' ' -f7-)"

  if [ "${selected_ids}" != "${expected_ids}" ]; then
    echo "Expected to select ids '${expected_ids}', but instead '${selected_ids}' were selected" >&2
    return 1
  fi
}
