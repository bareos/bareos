set -e
set -o pipefail
set -u

#
# make sure we can restore an incremental backup
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

# remove files
cleanup_remote

echo "################ restore incremental by mark #####################"
cat <<END_OF_DATA >"${tmp}/bconcmds"
@$out ${log_home}/restore-mark.out
restore jobid=2 client=ndmp-fd fileset=${NDMP_CLIENT}-fileset restorejob=NDMPRestoreDump select current
mark ${NDMP_TEST_PATH}/incremental
done
yes
wait
END_OF_DATA

run_bconsole "${tmp}/bconcmds"

check_log "${log_home}/restore-mark.out"

# we deterministically use one jobid and look that we found the corresponding incremental
# here the restore use the first incremental
${SSH} "printf \"%s\" \$(tail -c 200 \"${NDMP_TEST_PATH}/incremental\" | tail -n 1) | grep \"${NDMP_FILESYSTEM}-1\""


echo "################ restore incremental by file #####################"
cat <<END_OF_DATA >"${tmp}/bconcmds"
@$out ${log_home}/restore-file.out
restore jobid=10 client=ndmp-fd fileset=${NDMP_CLIENT}-fileset restorejob=NDMPRestoreDump file="${NDMP_TEST_PATH}/incremental" yes
wait
END_OF_DATA

run_bconsole "${tmp}/bconcmds"

check_log "${log_home}/restore-file.out"
${SSH} "printf \"%s\" \$(tail -c 200 \"${NDMP_TEST_PATH}/incremental\" | tail -n 1) | grep \"${NDMP_FILESYSTEM}-9\""

#uncomment once fixed
#check_for_zombie_jobs storage=ndmpfile client=ndmp-fd

end_test
