set -e
set -o pipefail
set -u

#
# make sure we can restore an incremental backup
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

# remove files
${SSH} rm -Rf "/ifs/home/regress/${NDMP_FILESYSTEM}"

cat <<END_OF_DATA >"${tmp}/bconcmds"
@$out ${log_home}/restore.out
restore select jobid=2 client=isilon fileset=isilon-fileset restorejob=NDMPRestoreDump
mark /ifs/home/regress/${NDMP_FILESYSTEM}/incremental
done
yes
wait
END_OF_DATA

run_bconsole "${tmp}/bconcmds"

check_log "${log_home}/restore.out"

${SSH} "tail -c 200 /ifs/home/regress/${NDMP_FILESYSTEM}/incremental" | grep "${NDMP_FILESYSTEM}-1"

check_for_zombie_jobs storage=isilonfile client=bareos-fd

end_test
