set -e
set -o pipefail
set -u

#
# make sure we can restore a full backup
#

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

start_test

# remove files
cleanup_remote

echo "################ restore full #####################"

cat <<END_OF_DATA >"${tmp}/bconcmds"
@$out ${log_home}/restore.out
restore jobid=1 client=ndmp-fd fileset=${NDMP_CLIENT}-fileset restorejob=NDMPRestoreDump select all done yes"
wait
END_OF_DATA

run_bconsole "${tmp}/bconcmds"

check_log "${log_home}/restore.out"

${SSH} "tail -c 200 \"${NDMP_TEST_PATH}/full\" | xargs | grep ${IP_ADDRESS_TO_ACCESS_NDMP_DATA_AGENT}"
${SSH} "cat \"${NDMP_TEST_PATH}/testfile\"" | diff - sbin/bareos_dir-ndmp-bareos
${SSH} "cat \"${NDMP_TEST_PATH}/testfile2\"" | diff - sbin/bareos_sd-ndmp-bareos

#uncomment when fixed
#check_for_zombie_jobs storage=ndmpfile client=ndmp-fd

end_test
