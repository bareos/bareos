set -e
set -u

. ./environment

TestName="$(basename "$(pwd)")"
export TestName

# Don't fail on setup
if [ -f ${current_test_directory}/etc/bareos/bareos-sd.d/autochanger/autochanger.conf ]; then
  DevicesFromConfig=$(sed -n -e 's/^.*Device=//p' ${current_test_directory}/etc/bareos/bareos-sd.d/autochanger/autochanger.conf)
  tapedevices=($DevicesFromConfig)
else
  DevicesFromConfig=""
  tapedevices=()
fi

release_all_devices()
{
#release all drives
# Total of drives ${#tapedevices[@]}
d=0
cat <<END_OF_DATA >"${tmp}/bconcmd_release_all_devices"
@$out ${log_home}/release_all_devices.out
END_OF_DATA

while [ ${d} -lt ${#tapedevices[@]} ]; do
  cat <<END_OF_DATA >>"${tmp}/bconcmd_release_all_devices"
release storage=Tape-0 drive=${d}
END_OF_DATA
  d=$((d + 1))
done
cat <<END_OF_DATA >>"${tmp}/bconcmd_release_all_devices"
wait
messages
END_OF_DATA

run_bconsole "${tmp}/bconcmd_release_all_devices"

}
