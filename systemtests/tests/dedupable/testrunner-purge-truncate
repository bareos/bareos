# TODO: this is independent and should work with CTEST: nolock, but the SD 
#       seems to crash when setting it.

set -e
set -o pipefail
set -u
#
# restore some a directory from archives
#
TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions
#shellcheck source=functions
. functions

# cleanup log
: >"${runner_tmp}/log1.out"

start_test

run_bconsole - <<END_OF_DATA
@$out ${runner_tmp}/log1.out
status storage=Dedup
label volume=PurgeTruncateVol pool=Incremental
purge volume=PurgeTruncateVol
truncate volstatus=Purged volume=PurgeTruncateVol
update volstatus=Full volume=PurgeTruncateVol
status storage=Dedup
quit
END_OF_DATA

expect_grep "3000 OK label" \
  "${runner_tmp}/log1.out" \
  "Volume labeling failed."

expect_not_grep "Error" \
  "${runner_tmp}/log1.out" \
  "Something went wrong."

end_test
