#!/bin/bash
set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

myname=$(basename "$0")

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions

expected_files=2

start_test

mkdir -p "${tmp}/data"
echo "$0" >"${tmp}/data/$myname"

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out $tmp/$myname.log
run job=backup-DBNormal level=Full yes
wait
messages
quit
END_OF_DATA

run_bconsole

if ! grep -q "FD Files Written:.*${expected_files}" "$tmp/$myname.log"; then
  echo "Number of files mismatch!"
  exit 2
fi

end_test
