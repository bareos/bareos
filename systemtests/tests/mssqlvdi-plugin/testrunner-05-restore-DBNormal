#!/bin/bash
set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

myname=$(basename "$0")

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions

expected_files=2

start_test

mkdir -p "${tmp}/data"
echo "$0" >"${tmp}/data/$myname"

cat <<END_OF_DATA >"$tmp/bconcmds"
@$out ${NULL_DEV}
messages
@$out "${tmp}/log1.out"
restore client=bareos-fd fileset=DBNormal where=/ pluginoptions=mssqlvdi:serveraddress=${HOSTNAME}:instance=default:database=DBNormalTest:norecovery=yes:replace=yes:recoverafterrestore=yes select all done yes
wait
messages
quit
END_OF_DATA

run_bconsole

#check_for_zombie_jobs storage=File
check_log "${tmp}/log1.out"

# check that the content is there
"${SQLCMD}" -Q "SELECT * FROM DBNormalTest.production.brands"  | grep Electra

end_test
