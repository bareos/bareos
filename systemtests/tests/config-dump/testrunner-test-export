set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

#shellcheck source=../../environment.in
. ./environment

#shellcheck source=../../scripts/functions
. "${BAREOS_SCRIPTS_DIR}"/functions

export_config()
{
  configfile="$1"

  "${BAREOS_DIRECTOR_BINARY}" -c "${configfile}" --xj
}

start_test

export_config "${BAREOS_CONFIG_DIR}/bareos-dir-full.conf" >"exported.json"

end_test
