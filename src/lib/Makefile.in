#

@MCOMMON@

# Define library versions
LIBBAC_LT_RELEASE = @LIBBAC_LT_RELEASE@
LIBBACCFG_LT_RELEASE = @LIBBACCFG_LT_RELEASE@
LIBBACPY_LT_RELEASE = @LIBBACPY_LT_RELEASE@

#
python = @PYTHON_INCDIR@

srcdir =	.
VPATH = 	.
.PATH:		.

# one up
basedir = ..
# top dir
topdir = ../..
# this dir relative to top dir
thisdir = src/lib

DEBUG = @DEBUG@
