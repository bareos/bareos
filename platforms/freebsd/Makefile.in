clean:
	@$(RMF) 1 2 3

distclean: clean
	@$(RMF) bareos-sd bareos-fd bareos-dir
	@$(RMF) Makefile bareos-*.spec

devclean: clean
	@$(RMF) bareos-sd bareos-fd bareos-dir
	@$(RMF) Makefile bareos-*.spec
