<?xml version="1.0"?>
<services>
  <service name="obs_scm">
    <param name="revision">@REVISION@</param>
    <param name="@VERSION_OR_VERSIONPREFIX@">@VERSION_NUMBER@</param>

    <param name="url">@GIT_URL@</param>

    <param name="submodules">disable</param>
    <param name="filename">bareos</param>
    <param name="scm">git</param>
    <param name="subdir">core</param>
    <param name="extract">platforms/win32/fillup.sed</param>
    <param name="extract">platforms/win32/clientdialog.ini</param>
    <param name="extract">platforms/win32/databasedialog.ini</param>
    <param name="extract">platforms/win32/directordialog.ini</param>
    <param name="extract">platforms/win32/storagedialog.ini</param>
    <param name="extract">platforms/win32/dummy.patch</param>
    <param name="extract">platforms/win32/mingw-debugsrc-devel.spec</param>
  </service>
  <service mode="buildtime" name="tar" />
  <service mode="buildtime" name="recompress">
    <param name="file">*.tar</param>
    <param name="compression">bz2</param>
  </service>
  <service name="set_version" />
</services>
