#
# This script dumps your PostgreSQL Bareos catalog in ASCII format
#
#  $1 is the Catalog Name ressource you want to backup

#
# Source the Bareos config functions.
#
. @scriptdir@/bareos-config-lib.sh


#
# Warn user if arguments are more than one
#
if [ $# -ge 1 ]; then
    warn "Script signature has changed : usage $0 CatalogName"
    exit 1
fi
catalog="$(echo "$1" | tr "[:upper:]" "[:lower:]")"

if ! bareos-dbcheck -C ${catalog}; then
    warn "Unknown catalog name given, checking default"
    catalog=$(get_database_catalog)
fi

working_dir="$(get_working_dir)"
db_name="$(get_database_name)"
db_user="$(get_database_user)"

rm -f "${working_dir}/${db_name}.sql"
PGOPTIONS='--client-min-messages=warning' pg_dump --clean --if-exists --encoding=SQL_ASCII --user="${db_user}" --file="${working_dir}/${db_name}.sql" "${db_name}"

return $?
