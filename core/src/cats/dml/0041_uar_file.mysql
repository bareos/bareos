SELECT Job.JobId AS JobId,
       CONCAT(Path.Path,File.Name) AS Name,
       StartTime,
       TYPE AS JobType,
               JobStatus,
               JobFiles,
               JobBytes
FROM Client,
     Job,
     File,
     Path
WHERE Client.Name='%s'
  AND Client.ClientId=Job.ClientId
  AND Job.JobId=File.JobId
  AND File.FileIndex > 0
  AND Path.PathId=File.PathId
  AND File.Name='%s'
ORDER BY StartTime DESC
LIMIT 20
